<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <InterceptorsPreviewNamespaces>Sculptor.Generated</InterceptorsPreviewNamespaces>
        <InterceptorsNamespaces>Sculptor.Generated</InterceptorsNamespaces>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\src\LayeredCraft.Sculptor.Attributes\LayeredCraft.Sculptor.Attributes.csproj" OutputItemType="Analyzer"
                        ReferenceOutputAssembly="true"/>
      <ProjectReference Include="..\..\src\LayeredCraft.Sculptor.Generators\LayeredCraft.Sculptor.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.10" />
    </ItemGroup>
    <!-- Only write generated files to disk in Debug builds (nice for inspection) -->
    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>

</Project>
